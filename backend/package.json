{
  "name": "chain-custody-backend",
  "version": "1.0.0",
  "description": "Healthcare Chain of Custody API with blockchain integration",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "demo:seed": "ts-node src/scripts/demo-data-seeder.ts",
    "demo:simulate": "ts-node src/scripts/demo-simulator.ts",
    "demo:scenario": "ts-node src/scripts/demo-scenarios.ts",
    "demo:clean": "ts-node src/scripts/demo-data-seeder.ts clean",
    "demo:full-reset": "npm run demo:clean && npm run demo:seed"
  },
  "keywords": [
    "healthcare",
    "blockchain",
    "chain-of-custody",
    "compliance",
    "avalanche"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jest": "^30.0.4",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.12.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
