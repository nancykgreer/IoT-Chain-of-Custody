# Healthcare Chain of Custody - Environment Variables Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/chain_custody_db"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="24h"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:4200"

# Avalanche Blockchain (Future Integration)
AVALANCHE_NETWORK="fuji"  # testnet
AVALANCHE_PRIVATE_KEY=""  # Leave empty for demo
AVALANCHE_RPC_URL=""      # Leave empty for demo

# Helium IoT Network (Future Integration)
HELIUM_API_KEY=""         # Leave empty for demo
HELIUM_WEBHOOK_SECRET=""  # Leave empty for demo

# Email Configuration (Future Feature)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""

# Redis Configuration (Future Caching)
REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Demo Configuration
DEMO_MODE="true"
DEMO_DATA_ENABLED="true"

# Security Headers
HELMET_ENABLED="true"

# WebSocket Configuration
WS_PORT=3002